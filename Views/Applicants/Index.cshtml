@model List<SocialAssistanceFundMisMcv.ViewModels.ApplicantViewModel>

@{
    ViewData["Title"] = "Applicants";
}

<div style="margin-left: 1%; margin: 2%">
    <h2>Applicants</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table id="applicantsTable" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Full Name</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Marital</th>
                <th>ID Number</th>
                <th>Location</th>
                <th>Postal Address</th>
                <th>Physical Address</th>
                <th>Telephone Contact(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model)
            {
                <tr>
                    <td>@applicant.FullName</td>
                    <td>@applicant.FormattedDob</td>
                    <td>@applicant.SexName</td>
                    <td>@applicant.MaritalStatusName</td>
                    <td>@applicant.IdentityCardNumber</td>
                    <td>@applicant.Location</td>
                    <td>@applicant.PostalAddress</td>
                    <td>@applicant.PhysicalAddress</td>
                    <td>@applicant.PhoneNumbersListString</td>
                    <td>
                        <!-- Edit -->
                        <a href="@Url.Action("Edit", "Applicants", new { id = applicant.Id })" class="btn btn-warning btn-sm" title="Edit">
                            <i class="fa fa-pen"></i>
                        </a>

                        <!-- Delete -->
                        <form method="post" action="@Url.Action("Delete", "Applicants", new { id = applicant.Id })" style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this applicant?');">
                            <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No applicants found.</p>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#applicantsTable').DataTable({
                pageLength: 10,
                order: [[0, "asc"]],
                language: {
                    search: "Search applicants:",
                    lengthMenu: "Show _MENU_ entries",
                    zeroRecords: "No applicants found",
                    info: "Showing _START_ to _END_ of _TOTAL_ applicants",
                    infoEmpty: "No applicants available",
                    infoFiltered: "(filtered from _MAX_ total applicants)"
                }
            });
        });
    </script>
}
