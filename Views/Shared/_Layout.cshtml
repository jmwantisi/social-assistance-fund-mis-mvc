<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Social Assistance Fund</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialAssistanceFundMisMcv.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark shadow-sm">
            <div class="container-fluid">
                <!-- Left-side Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/left-logo.png" alt="Left Logo" height="50" class="me-2">
                    <span class="font-weight-bold text-dark">Social Assistance Fund</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark hover-bg-light p-2 rounded" asp-area="" asp-controller="Home" asp-action="Index">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark hover-bg-light p-2 rounded" asp-area="" asp-controller="Applicants" asp-action="Index">Applicants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark hover-bg-light p-2 rounded" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/images/left-logo.png" alt="Left Logo" height="30">
            &copy; 2025 - Social Assistance Fund
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Lighter navbar background */
    .navbar-light {
        background-color: rgb(120, 170, 200, 0.5) !important;
    }

    /* Lighter hover effect on nav links */
    .navbar-nav .nav-link {
        color: #495057 !important; /* Dark grey color */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            background-color: #e2e6ea; /* Light grey hover background */
            color: #007bff; /* Blue text color on hover */
        }

        /* Active link styling */
        .navbar-nav .nav-link.active {
            background-color: #007bff !important; /* Blue background for active links */
            color: white !important;
        }

</style>
